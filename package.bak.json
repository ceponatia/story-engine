{
  "name": "story-engine",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/domain/*",
    "packages/world"
  ],
  "scripts": {
    "build": "turbo build --continue-on-error",
    "dev": "turbo dev",
    "lint": "turbo lint --continue-on-error",
    "lint:fix": "turbo lint:fix --continue-on-error",
    "type-check": "turbo type-check --continue-on-error",
    "test": "turbo test --continue-on-error",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage --continue-on-error",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,mjs,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mjs,json,md}\"",
    "check:naming": "node scripts/checkNaming.js",
    "worker:start": "turbo worker:start",
    "worker:dev": "turbo worker:dev",
    "clean": "turbo clean && rm -rf node_modules",
    "reset": "npm run clean && npm install"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.20",
    "dotenv": "^17.0.1",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-unicorn": "^59.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "turbo": "^2.5.4",
    "typescript": "^5"
  },
  "packageManager": "npm@10.0.0"
}
