{
  "name": "story-engine",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/domain/*",
    "packages/world"
  ],
  "scripts": {
    "build": "turbo build --continue",
    "dev": "turbo run dev --concurrency=16",
    "lint": "turbo lint --continue",
    "lint:fix": "turbo lint:fix --continue",
    "type-check": "turbo type-check --continue",
    "test": "turbo test --continue",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage --continue",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,mjs,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mjs,json,md}\"",
    "check:naming": "node scripts/checkNaming.js",
    "check:env-loading": "node scripts/validate-env-loading.js",
    "worker:start": "turbo worker:start",
    "worker:dev": "turbo worker:dev",
    "clean": "turbo clean && rm -rf node_modules",
    "reset": "npm run clean && npm install"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.6",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.30.1",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-unicorn": "^59.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.13.1"
}
