{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "removeComments": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "baseUrl": ".",
    "paths": {
      "@story-engine/*": ["packages/*/src"],
      "@story-engine/types": ["packages/types/src"],
      "@story-engine/validation": ["packages/validation/src"],
      "@story-engine/postgres": ["packages/postgres/src"],
      "@story-engine/mongodb": ["packages/mongodb/src"],
      "@story-engine/redis": ["packages/redis/src"],
      "@story-engine/qdrant": ["packages/qdrant/src"],
      "@story-engine/adventures": ["packages/adventures/src"],
      "@story-engine/ai": ["packages/ai/src"],
      "@story-engine/auth": ["packages/auth/src"],
      "@story-engine/domain-characters": ["packages/domain/characters/src"],
      "@story-engine/world": ["packages/world/src"],
      "@story-engine/utils": ["packages/utils/src"]
    }
  },
  "include": ["packages", "apps"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "./apps/web" },
    { "path": "./packages/types" },
    { "path": "./packages/validation" },
    { "path": "./packages/postgres" },
    { "path": "./packages/mongodb" },
    { "path": "./packages/redis" },
    { "path": "./packages/qdrant" },
    { "path": "./packages/adventures" },
    { "path": "./packages/ai" },
    { "path": "./packages/auth" },
    { "path": "./packages/domain/characters" },
    { "path": "./packages/world" },
    { "path": "./packages/utils" }
  ]
}
